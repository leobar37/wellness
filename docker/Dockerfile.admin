FROM node:16-alpine

WORKDIR /usr/src/app

COPY package.json ./

RUN yarn install

RUN rm -r node_modules/@next/swc-linux-x64-gnu

COPY . .

RUN ls -al

RUN SET NODE_OPTIONS=--max_old_space_size=8048

RUN yarn nx build admin --skip-nx-cache

ENV PORT=3000

RUN ls -al

EXPOSE ${PORT}

CMD ["yarn" , "nx" , "serve" , "admin"]

