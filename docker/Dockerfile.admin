FROM node:16-alpine

WORKDIR /build

COPY package.json ./

COPY yarn.lock ./

RUN yarn install

RUN rm -r node_modules/@next/swc-linux-x64-gnu

COPY . .

RUN yarn nx build admin --configuration=production

ENV PORT=3000

ENV NODE_ENV=production

EXPOSE ${PORT}

CMD ["yarn", "nx" , "serve" , "admin" ,"--configuration=production"]

