FROM node:16-alpine AS dependeces

WORKDIR /build

COPY package.json ./

COPY yarn.lock ./

RUN yarn install

RUN rm -r node_modules/@next/swc-linux-x64-gnu

COPY . .

RUN ls -al

RUN yarn nx build admin

RUN ls -al

FROM node:16-alpine as production

ENV PORT=3000

ENV NODE_ENV=production

WORKDIR /usr/src/app

COPY --from=dependeces /build/dist/apps/admin .

COPY --from=dependeces /build/node_modules node_modules 

EXPOSE ${PORT}

CMD ["yarn", "start"]

